@model List<Prestamo>
@{
    ViewData["Title"] = "Préstamos Activos";
}


<div class="container">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID Préstamo</th>
                <th>ID Libro</th>
                <th>Nombre Libro</th>
                <th>Fecha Préstamo</th>
                <th>DNI Usuario</th>
                <th>Nombre Usuario</th>
                <th>Apellido Usuario</th>
                <th>Tipo Usuario</th>
                <th>Tipo Lectura</th>
                <th>Fecha Devolución</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prestamo in Model)
            {
                <tr>
                    <td>@prestamo.PrestamoID</td>
                    <td>@prestamo.LibroID</td>
                    <td>@prestamo.Libro.Nombre</td>
                    <td>@prestamo.FechaPrestamo.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@prestamo.Usuario.DNI</td>
                    <td>@prestamo.Usuario.Nombres</td>
                    <td>@prestamo.Usuario.Apellidos</td>
                    <td>@prestamo.Usuario.TipoUsuario</td>
                    <td>@prestamo.TipoPrestamo</td>
                    <td>@(prestamo.FechaDevolucion?.ToString("dd/MM/yyyy HH:mm") ?? "Pendiente")</td>
                </tr>
            }
        </tbody>
    </table>
</div>